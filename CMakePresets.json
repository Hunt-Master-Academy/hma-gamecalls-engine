{
    "version": 3,
    "configurePresets": [
        {
            "name": "docker-debug",
            "displayName": "Docker Debug",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_CXX_COMPILER": "g++-13",
                "CMAKE_C_COMPILER": "gcc-13",
                "USE_CCACHE": "ON"
            }
        },
        {
            "name": "docker-rel",
            "inherits": "docker-debug",
            "displayName": "Docker Release (Optimized)",
            "binaryDir": "${sourceDir}/build/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "docker-asan",
            "inherits": "docker-debug",
            "displayName": "Docker RelWithDebInfo + ASan",
            "binaryDir": "${sourceDir}/build/asan",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CMAKE_CXX_FLAGS": "-fsanitize=address,undefined -fno-omit-frame-pointer",
                "CMAKE_C_FLAGS": "-fsanitize=address,undefined -fno-omit-frame-pointer",
                "CMAKE_LINKER_FLAGS": "-fsanitize=address,undefined"
            }
        },
        {
            "name": "docker-coverage",
            "inherits": "docker-debug",
            "displayName": "Docker Coverage",
            "binaryDir": "${sourceDir}/build/coverage",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_FLAGS": "--coverage -O0 -g",
                "CMAKE_C_FLAGS": "--coverage -O0 -g",
                "CMAKE_EXE_LINKER_FLAGS": "--coverage",
                "CMAKE_SHARED_LINKER_FLAGS": "--coverage"
            }
        },
        {
            "name": "docker-ubsan",
            "inherits": "docker-debug",
            "displayName": "Docker UBSan",
            "binaryDir": "${sourceDir}/build/ubsan",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CMAKE_CXX_FLAGS": "-fsanitize=undefined -fno-omit-frame-pointer -O1",
                "CMAKE_C_FLAGS": "-fsanitize=undefined -fno-omit-frame-pointer -O1",
                "CMAKE_LINKER_FLAGS": "-fsanitize=undefined"
            }
        }
    ]
}
