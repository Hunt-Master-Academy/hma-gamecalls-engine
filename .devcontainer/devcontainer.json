// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/cpp
{
  "name": "Huntmaster C++ Engine Dev",
  "build": {
    // Use the dedicated development Dockerfile
    "dockerfile": "../Dockerfile.dev"
  },
  "features": {
    "ghcr.io/devcontainers/features/git-lfs:1": {},
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/python:1": {},
    "ghcr.io/dhoeric/features/act:1": {},
    "ghcr.io/wxw-matt/devcontainer-features/command_runner:0": {},
    "ghcr.io/wxw-matt/devcontainer-features/script_runner:0": {},
    "ghcr.io/nikiforovall/devcontainer-features/dotnet-csharpier:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        // Core C++ / CMake
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "twxs.cmake",
        // Formatting & linting
        "xaver.clang-format",
        "notskm.clang-tidy",
        // Documentation helpers
        "cschlosser.doxdocgen",
        // Syntax / UX improvements
        "jeff-hykin.better-cpp-syntax",
        "usernamehw.errorlens",
        // Git / collaboration
        "eamodio.gitlens",
        // Quality / hygiene
        "streetsidesoftware.code-spell-checker",
        "shardulm94.trailing-spaces",
        // GitHub AI assistance
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ]
    }
  },
  // Forward dev server / WASM test ports
  "forwardPorts": [
    8080
  ],
  // Automatically run an initial configure + build so IntelliSense is warm
  "postCreateCommand": "cmake -B build -G Ninja -DCMAKE_BUILD_TYPE=Debug && cmake --build build --parallel",
  // Use non-root user defined in Dockerfile.dev (developer)
  "remoteUser": "developer"
  // Features to add to the dev container. More info: https://containers.dev/features.
  // "features": {},
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],
  // Use 'postCreateCommand' to run commands after the container is created.
  // "postCreateCommand": "gcc -v",
  // Configure tool-specific properties.
  // "customizations": {},
  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
