{
    "version": 4,
    "configurations": [
        {
            "name": "Debug Engine Tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/RunEngineTests",
            "args": [
                "--gtest_break_on_failure"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug Interactive Recorder",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/interactive_recorder",
            "args": [
                "--debug",
                "--trace"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PULSE_SERVER",
                    "value": "tcp:localhost"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "configurationProvider": "ms-vscode.cmake-tools"
        }
    ]
}