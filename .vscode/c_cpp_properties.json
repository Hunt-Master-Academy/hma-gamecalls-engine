{
    "version": 4,
    "configurations": [
        {
            "name": "Huntmaster Debug (CMake)",
            "compilerPath": "/usr/bin/g++-13",
            "cStandard": "c17",
            "cppStandard": "c++20",
            "intelliSenseMode": "linux-gcc-x64",
            "compileCommands": "${workspaceFolder}/build/compile_commands.json",
            "includePath": [
                "${workspaceFolder}/include",
                "${workspaceFolder}/libs",
                "${workspaceFolder}/libs/kissfft",
                "${workspaceFolder}/libs/miniaudio",
                "${workspaceFolder}/build/_deps/**"
            ],
            "defines": [
                "HAVE_KISSFFT",
                "KISS_FFT_SHARED",
                "kiss_fft_scalar=float"
            ]
        }
    ]
}
