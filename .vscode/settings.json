        "filesystem": "cpp",
        "*.inc": "cpp"
    },


    // Exclude Patterns
    "files.exclude": {
        "**/build": true,
        "**/build-wasm": true,
        "**/.git": true,
        "**/.DS_Store": true,
        "**/compile_commands.json": true
    },
    "search.exclude": {
        "**/build": true,
        "**/build-wasm": true,
        "**/libs/kissfft": true,
        "**/node_modules": true
    },

    // Spell Checker
    "cSpell.words": [
        "ALSA",
        "AUDIOUNIT",
        "BINDIR",
        "Coeffs",
        "COREAUDIO",
        "COREFOUNDATION",
        "drwav",
        "Emscripten",
        "endforeach",
        "fftr",
        "gbenchmark",
        "gtest",
        "Huntmaster",
        "INCLUDEDIR",
        "KISSFFT",
        "miniaudio",
        "unex",
        "winmm"
    ]
}