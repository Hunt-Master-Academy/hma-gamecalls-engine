{
    // Terminal Configuration - Auto-activate conda environment
    "terminal.integrated.defaultProfile.windows": "Command Prompt with Conda",
    "terminal.integrated.profiles.windows": {
        "Command Prompt with Conda": {
            "path": "C:\\Windows\\System32\\cmd.exe",
            "args": ["/k", "C:\\ProgramData\\miniconda3\\Scripts\\activate.bat && conda activate huntmaster_engine_env"],
            "icon": "terminal-cmd",
            "overrideName": true
        },
        "PowerShell with Conda": {
            "path": "powershell",
            "args": ["-NoExit", "-Command", "& 'C:\\ProgramData\\miniconda3\\shell\\condabin\\conda-hook.ps1'; conda activate huntmaster_engine_env"],
            "icon": "terminal-powershell"
        },
        "Git Bash": {
            "path": "C:\\Program Files\\Git\\bin\\bash.exe",
            "icon": "terminal-bash"
        }
    },
    
    // Python Configuration
    "python.defaultInterpreterPath": "C:\\ProgramData\\miniconda3\\envs\\huntmaster_engine_env\\python.exe",
    "python.terminal.activateEnvironment": true,
    
    // CMake Configuration
    "cmake.configureOnOpen": false,
    "cmake.generator": "MinGW Makefiles",
    "cmake.buildDirectory": "${workspaceFolder}/build",
    "cmake.configureArgs": [
        "-DCMAKE_C_COMPILER=C:/ProgramData/miniconda3/envs/huntmaster_engine_env/Library/mingw-w64/bin/gcc.exe",
        "-DCMAKE_CXX_COMPILER=C:/ProgramData/miniconda3/envs/huntmaster_engine_env/Library/mingw-w64/bin/g++.exe"
    ],
    
    // CMake Tools Configuration
    "cmake.environment": {
        "PATH": "C:\\ProgramData\\miniconda3\\envs\\huntmaster_engine_env\\Library\\mingw-w64\\bin;${env:PATH}"
    },
    
    // File associations
    "files.associations": {
        "MLTable": "yaml",
        "*.yml": "yaml",
        "*.h": "cpp",
        "*.hpp": "cpp",
        "*.cpp": "cpp",
        "*.cc": "cpp",
